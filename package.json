{
  "name": "@firestitch/component-tools",
  "title": "Component Tools",
  "description": "@firestitch/component-tools",
  "version": "13.0.1",
  "scripts": {
    "clean:demo": "rimraf ../../../demo",
    "demo:build": "npm-run-all -s clean:demo demo:webpack",
    "demo:serve": "http-server ../../../demo",
    "demo:webpack": "cd ../../../ && webpack --config=webpack.demo.js --progress --profile",
    "lint": "tslint '../../../src/**/*.ts' -p ../../../tslint.json",
    "postinstall": "npm rebuild node-sass",
    "cli:serve": "ng serve --host=0.0.0.0 --disable-host-check",
    "cli:serve:secure": "ng serve --host=0.0.0.0 --disable-host-check --ssl",
    "cli:serve:aot": "ng serve --aot --host=0.0.0.0 --disable-host-check",
    "cli:copy-styles": "cpx -v \"../../../src/app/styles.scss\" \"../../../package\"",
    "cli:copy-assets": "cpx -v \"../../../src/app/assets/**/*\" \"../../../package/assets\"",
    "cli:demo": "npm-run-all -s clean:demo cli:demo:build cli:demo:copy-sources",
    "cli:demo:aot-less": "npm-run-all -s clean:demo cli:demo:build:aot-less cli:demo:copy-sources",
    "cli:demo:build": "ng build --no-progress --aot --configuration=production --build-optimizer",
    "cli:demo:build:aot-less": "ng build --no-progress",
    "cli:demo:copy-sources": "cpx -v \"../../../playground/app/components/**/*\" \"../../../demo/assets/components/\"",
    "cli:build": "ng build fs-package --configuration=production",
    "cli:package": "npm-run-all -s cli:package:remove cli:package:copyjson cli:build cli:copy-styles cli:copy-assets cli:package:deletejson",
    "cli:package:test": "ng test fs-package",
    "cli:package:copyjson": "node package-auto.js --includeModules=true",
    "cli:package:remove": "node package-remove.js",
    "cli:package:version": "node package-version.js",
    "cli:package:deletejson": "rimraf ../../../src/package.json",
    "cli:package:publish": "npm-run-all -s cli:package:publish:copyjson cli:package:version cli:package:publish:npm cli:package:publish:version cli:package:deletejson",
    "cli:package:publish:copyjson": "node package-auto.js",
    "cli:package:publish:npm": "npm publish ../../../package --access=public",
    "cli:package:publish:version": "node package-publish-version.js"
  },
  "dependencies": {
    "cpx": "^1.5.0",
    "prompts": "^2.4.2",
    "npm-run-all": "^4.1.5"
  }
}
